# Wallet 模块环境变量配置

# Signer 模块基础 URL (必需)
SIGNER_BASE_URL=http://localhost:3001

# 服务端口 (可选，默认为 3000)
PORT=3000


# Database Gateway Configuration for Wallet Module

# Gateway Service URL
DATABASE_GATEWAY_URL=http://localhost:3003

# Wallet Module Private Key for signing (hex format)
# This should be generated using the gateway service's /generate-keypair endpoint
# The corresponding public key should be configured in the gateway service
WALLET_PRIVATE_KEY=

# Example (DO NOT USE IN PRODUCTION):
# WALLET_PRIVATE_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890